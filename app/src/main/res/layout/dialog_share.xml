<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_toast_success"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Wybierz miejsce gdzie chcesz udostępnić swoją listę zakupów "
        android:gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#26262A"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendInApp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/btn_basic_custom_green"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_share_in_app"
            android:foreground="?attr/selectableItemBackground"
            android:text="Udostępnij innemu użytkownikowi"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendOtherApp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/btn_basic_custom_red"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_share_48"
            android:foreground="?attr/selectableItemBackground"
            android:text="Udostępnij w innej aplikacji"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>